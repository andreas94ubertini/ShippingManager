@model ShippingManager.Models.Users

@{
    ViewBag.Title = "LogIn";
}


@using (Html.BeginForm())
{
    <div class="border p-lg-5 mt-5">
        <h2 class="text-center text-light">Effettua il Log-In</h2>
        @Html.AntiForgeryToken()

        <div class="form">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group d-flex flex-column align-items-center">
                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-5 text-light fs-5" })
                <div class="col-5">
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex flex-column align-items-center">
                @Html.LabelFor(model => model.Psw, htmlAttributes: new { @class = "control-label col-5 text-light fs-5" })
                <div class="col-5">
                    @Html.TextBoxFor(model => model.Psw, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Psw, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mt-2 d-flex justify-content-center">
                <div class="col-5 text-center">
                    <button class="btn btn-outline-light fs-4 w-50">Log-In</button>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}